<div class="main_div">
  <div class="management_div">
    <a href="#">입고현황</a>
  </div>
  <hr />
  <div class="btn_div">
      <button class="input_modify">수정</button>
    <div></div>

    <div class="search_div">
      <div class="dropdown">
        <button onclick="dp_menu()" class="button">재고명 ▼</button>
        <div style="display: none" id="drop-content">
          <a href="#">재고 번호</a>
          <a href="#">재고 명</a>
          <a href="#">재고 정보</a>
          <a href="#">구매처</a>
          <a href="#">입고 예정 일자</a>
          <a href="#">상태</a>
        </div>
      </div>
      <input type="text" />
      <button id="search_btn">검색</button>
    </div>
    <button class="add_input_btn"
    data_modal="modal1">+ 입고 추가</button>
    
    <div class="input_modal" id="modal1">
      <div class="input_modal_content">
          
        <div class="input_modal_header">입고추가 정보입력
            <button class="icon modal_close"><i
              class="material-icons">close</i></button></div>

              <form onsubmit="stockInput()" action ="/input" method="post" >
                <div class="input_modal_body">
                  
                  <label>재고 명</label>
                  <div class="stock_name">
                    <input type="text" id="stock_name" name="stock_name" placeholder="">
                  </div>
                  
                  <label>재고정보</label>
                  <div class="stock_info">
                    <input type="text" id="stock_info" name="stock_info" placeholder="">
                  </div>
                  
                  <label>구매처</label>
                  <div class="buy_com">
                    <input type="text" id="buy_com" name="buy_com" placeholder="">
                  </div>
                  
                  <label>입고 예정 일자</label>
                  <div class="wlb_input_date">
                    <input type="text" id="wlb_input_date" name="wlb_input_date" placeholder="">                  
                  </div>
                  
                </div>
                
                <div class="input_modal_footer">
                  <button class="link modal_close" type="submit">완료</button>
                </div>
                </form>
              </div>
            </div>
  </div>
  
  <div class="graph_top_div">
    <div class="main_graph_div">
      <div class="bd-example">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th><input type="checkbox" onclick="selectAll(this)" /></th>
              <th scope="col">재고 번호</th>
              <th scope="col">재고 명</th>
              <th scope="col">재고 정보</th>
              <th scope="col">구매처</th>
              <th scope="col">입고 예정 일자</th>
              <th scope="col">입고 완료</th>
              <th></th>
            </tr>
          </thead>
          <tbody>

            <%for(var i = 0; i<data.length; i++){%>
              <tr>
                <td><input type="checkbox" name="item" id="my_checkbox" value="<%- data[i].stock_num%>" /></td>
                <td><%- data[i].stock_num%></td>
                <td><%- data[i].stock_name%></td>
                <td><%- data[i].stock_info %></td>
                <td><%- data[i].buy_com %></td>
                <td><%- data[i].wlb_input_date %></td>
                <td>
                <% if(data[i].input_date) { %>
                  <%- data[i].input_date %>
                <% } else { %>
                  <button class="input_date_button">입고완료</button>
                <% } %>
              </td>
                <td>
                  <% if(data[i].input_date) { %>
                    <%- data[i].input_date %>
                  <% } else { %>
                    <button class="input_date_button">입고완료</button>
                  <% } %>
                </td>
                
              </tr>
            <% } %>  
      

          </tbody>
        </table>
      </div>
    </div>
  </div>
